{%  extends 'base.html.twig' %}

{% block body %}
    {%  if car %}
        <div class="container">
            <div style="margin-top: 15px" class="row">
                <div class="col-md-6 annonce_header">
                    <h5>Autocar {{ car.marque }}</h5>
                    {% if car.km is defined  and car.km > 0 or car.km is not null %}
                    <i class="fa fa-bus"></i><span>
                        {{ car.km }} Km | mise en circulation le {{ car.dateMar |date('d/m/Y') }}
                        {% else %}
                           <strong>{{ car.dateMar | date('d/m/Y') }}</strong>
                    {% endif %}</span>
                </div>
                <div style="text-align: right" class="col-md-6">
                    <i style="color: #00a65a" class="fa fa-money"></i><span> <em><strong>180.000 € HT</strong></em></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="separator"></div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    {% if car.images is not null %}
                        {% for car in car.images  %}
                            {% if loop.first %}
                                <a href="../../{{ car.url }}" data-fancybox="gallery">
                                    <img src="../../{{ car.url }}" alt="{{ car.alt }}">
                                </a>
                                {% else %}
                                    <a href="../../{{ car.url }}" data-fancybox="gallery">
                                        <img style="width: 14%; height: 14%; margin-top: 15px"  src="../../{{ car.url }}" alt="{{ car.alt }}">
                                    </a>
                            {% endif %}
                        {% endfor %}
                        {% else %}
                        <h4>Il n'y a pas de photo pour ce car</h4>
                    {% endif %}
                </div>
                <div class="col-md-8">
                    <h6>Caractéristiques :</h6>
                    <div class="caracteristiques">
                        <table style="max-width: 300px" class="table-responsive">
                            <tbody>
                                <tr>
                                    <td>Norme Euro : </td><td><em class="right">{{ car.euro }}</em></td>
                                </tr>
                                <tr>
                                    <td>Puissance moteur (cv din) : </td><td><em class="right">{{ car.euro }}</em></td>
                                </tr>
                                <tr>
                                    <td>Energie : </td><td><em class="right">{{ car.euro }}</em></td>
                                </tr>
                                <tr>
                                    <td>Transmission : </td><td><em class="right">{{ car.euro }}</em></td>
                                </tr>
                                <tr>
                                    <td>Bv : </td><td><em class="right">{{ car.euro }}</em></td>
                                </tr>
                                <tr>
                                    <td>Longueur : </td><td><em class="right">{{ car.euro }}</em></td>
                                </tr>
                                <tr>
                                    <td>Hauteur : </td><td><em class="right">{{ car.euro }}</em></td>
                                </tr>
                                <tr>
                                    <td>Sièges passagers : </td><td><em class="right">{{ car.nbPlaces }}</em></td>
                                </tr>
                                <tr>
                                    <td>Passagers debout : </td><td><em class="right">{{ car.euro }}</em></td>
                                </tr>
                                <tr>
                                    <td>Accessibilité : </td><td><em class="right">{{ car.euro }}</em></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="separator"></div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <h6>Equipements</h6>
                </div>
            </div>
            <div class="row equipements_table">
                <div class="col-md-4">
                    <table>
                        <tbody>
                        <tr class="bg-grey">
                            <td>Regulateur de vitesse : </td>
                            <td>
                                {% if car.RegulateurVitesse == 1 %}
                                    <em><strong>OUI</strong></em>
                                {% else %}
                                    <em><strong>NON</strong></em>
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <td>Gps :</td>
                            <td>
                                {% if car.Gps == 1 %}
                                    <em><strong>OUI</strong></em>
                                {% else %}
                                    <em><strong>NON</strong></em>
                                {% endif %}
                            </td>
                        </tr>
                        <tr class="bg-grey">
                            <td>Micro guide :</td>
                            <td>
                                {% if car.MicroGuide == 1 %}
                                    <em><strong>OUI</strong></em>
                                {% else %}
                                    <em><strong>NON</strong></em>
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <td>Clim :</td>
                            <td>
                                {% if car.Clim == 1 %}
                                    <em><strong>OUI</strong></em>
                                {% else %}
                                    <em><strong>NON</strong></em>
                                {% endif %}
                            </td>
                        </tr>
                        <tr  class="bg-grey">
                            <td>Buses individuelles : </td>
                            <td>
                                {% if car.BusesIndividuelles == 1 %}
                                    <em><strong>OUI</strong></em>
                                {% else %}
                                    <em><strong>NON</strong></em>
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <td>Rideaux : </td>
                            <td>
                                {% if car.Rideaux == 1 %}
                                    <em><strong>OUI</strong></em>
                                {% else %}
                                    <em><strong>NON</strong></em>
                                {% endif %}
                            </td>
                        </tr>
                        <tr class="bg-grey">
                            <td>Filets : </td>
                            <td>
                                {% if car.Filets == 1 %}
                                    <em><strong>OUI</strong></em>
                                {% else %}
                                    <em><strong>NON</strong></em>
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <td>Frigo : </td>
                            <td>
                                {% if car.Frigo == 1 %}
                                    <em><strong>OUI</strong></em>
                                {% else %}
                                    <em><strong>NON</strong></em>
                                {% endif %}
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
                <div class="col-md-4">
                    <table>
                        <tbody>
                        <tr class="bg-grey">
                            <td>Ceinture de sécurité</td>
                            <td>
                                {% if  car.CeintureSecurite == "2 points" or car.CeintureSecurite == "3 points" %}
                                    <em><strong>{{ car.CeintureSecurite | upper }}</strong></em>
                                {% else %}
                                    <em><strong>-</strong></em>
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <td>Vidéo :</td>
                            <td>
                                {% if  car.Video == "DVD" or car.Video == "VHS" %}
                                    <em><strong>{{ car.Video | upper }}</strong></em>
                                {% else %}
                                    <em><strong>-</strong></em>
                                {% endif %}
                            </td>
                        </tr>
                        <tr class="bg-grey">
                            <td>Micro conducteur :</td>
                            <td>
                                {% if car.MicroConducteur == 1 %}
                                    <em><strong>OUI</strong></em>
                                {% else %}
                                    <em><strong>NON</strong></em>
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <td>Chauffage indépendant : </td>
                            <td>
                                {% if car.ChauffageIndependant == 1 %}
                                    <em><strong>OUI</strong></em>
                                {% else %}
                                    <em><strong>NON</strong></em>
                                {% endif %}
                            </td>
                        </tr>
                        <tr  class="bg-grey">
                            <td>Ralentisseur : </td>
                            <td>
                                {% if  car.Ralentisseur == "intarder" or car.Ralentisseur == "voith" or car.Ralentisseur == "telma" %}
                                    <em><strong>{{ car.Ralentisseur | upper }}</strong></em>
                                {% else %}
                                    <em><strong>-</strong></em>
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <td>Sièges décalables : </td>
                            <td>
                                {% if car.SiegesDecalables == 1 %}
                                    <em><strong>OUI</strong></em>
                                {% else %}
                                    <em><strong>NON</strong></em>
                                {% endif %}
                            </td>
                        </tr>
                        <tr class="bg-grey">
                            <td>Prédisposition ski : </td>
                            <td>
                                {% if car.PorteSki == 1 %}
                                    <em><strong>OUI</strong></em>
                                {% else %}
                                    <em><strong>NON</strong></em>
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <td>Abs : </td>
                            <td>
                                {% if car.Abs == 1 %}
                                    <em><strong>OUI</strong></em>
                                {% else %}
                                    <em><strong>NON</strong></em>
                                {% endif %}
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
                <div class="col-md-4">
                    <table>
                        <tbody>
                        <tr class="bg-grey">
                            <td>Tachygraphe : </td>
                            <td>
                                {% if  car.tachygraphe == "numérique" or car.tachygraphe == "analogique" %}
                                    <em><strong>{{ car.tachygraphe | upper }}</strong></em>
                                    {% else %}
                                        <em><strong>-</strong></em>
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <td>Radio : </td>
                            <td>
                                {% if  car.Radio == "CD" or car.Radio == "cassettes" %}
                                    <em><strong>{{ car.Radio | upper }}</strong></em>
                                {% else %}
                                    <em><strong>-</strong></em>
                                {% endif %}
                            </td>
                        </tr>
                        <tr class="bg-grey">
                            <td>Caméra : </td>
                            <td>
                                {% if  car.Camera == "Route" or car.Camera == "Guide" or car.Camera == "Porte N2" or car.Camera == "Recul" %}
                                    <em><strong>{{ car.Camera | upper }}</strong></em>
                                {% else %}
                                    <em><strong>-</strong></em>
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <td>WC : </td>
                            <td>
                                {% if car.Wc == 1 %}
                                    <em><strong>OUI</strong></em>
                                {% else %}
                                    <em><strong>NON</strong></em>
                                {% endif %}
                            </td>
                        </tr>
                        <tr class="bg-grey">
                            <td>Tablettes : </td>
                            <td>
                                {% if car.Tablettes == 1 %}
                                    <em><strong>OUI</strong></em>
                                {% else %}
                                    <em><strong>NON</strong></em>
                                {% endif %}
                            </td>
                        </tr>
                        <tr>
                            <td>Repose pieds : </td>
                            <td>
                                {% if car.ReposeMollet == 1 %}
                                    <em><strong>OUI</strong></em>
                                {% else %}
                                    <em><strong>NON</strong></em>
                                {% endif %}
                            </td>
                        </tr>
                        <tr class="bg-grey">
                            <td>Girouette : </td>
                            <td>
                                {% if car.Girouette == 1 %}
                                    <em><strong>OUI</strong></em>
                                {% else %}
                                    <em><strong>NON</strong></em>
                                {% endif %}
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="separator"></div>
                </div>
            </div>
            {% if app.user %}
                <div style="margin-bottom: 20px" class="row">
                    <div class="col-md-4">
                        <a href="{{ path('car', {'id': car.id }) }}" class="btn btn-primary">Retour Fiche du car</a>
                    </div>
                </div>
            {% endif %}
        </div>
    {% endif %}
{% endblock %}